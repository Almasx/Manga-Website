// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

// Necessary for Next auth
model Account {
  id                String  @id @default(cuid())
  userId            String
  email             String?
  user_id           Int?
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?   @db.Text
  accounts      Account[]
  sessions      Session[]
  knockId       String?

  role            Role             @default(USER)
  bookmarks       Bookmark[]
  comicsComments  ComicsComment[]
  chapterComments ChapterComment[]
  ratingsGiven    Ratings[]

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  chapterLikes ChapterLike[]
  chaptersRead Chapter[]
}

enum Role {
  USER
  ADMIN
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Bookmark {
  id    String @id @default(cuid())
  title String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  comics    Comics[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Comics {
  id       String @id @default(cuid())
  title    String @unique
  title_ru String

  thumbnail   Thumbnail?
  description String     @db.LongText

  status Status @default(ongoing)
  year   Int

  genres    Genre[]
  bookmarks Bookmark[]
  chapters  Chapter[]
  comments  ComicsComment[]
  ratings   Ratings[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Status {
  ongoing
  finished
  abandoned
}

model Chapter {
  id           String @id @default(cuid())
  chapterIndex Int
  volumeIndex  Int
  title        String

  comics   Comics @relation(fields: [comicsId], references: [id], onDelete: Cascade)
  comicsId String

  publicAt DateTime?

  pages     Page[]
  comments  ChapterComment[]
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  likes     ChapterLike[]
  userRead  User[]

  @@unique([chapterIndex, volumeIndex])
  @@index([comicsId])
}

model Genre {
  id     String   @id @default(cuid())
  title  String   @unique
  comics Comics[]
}

model Thumbnail {
  id String @id @default(cuid())

  comics   Comics @relation(fields: [comicsId], references: [id], onDelete: Cascade)
  comicsId String @unique
}

model Page {
  id String @id @default(cuid())

  chapter   Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  chapterId String

  @@index([chapterId])
}

model ComicsComment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId  String
  comics    Comics   @relation(fields: [comicsId], references: [id])
  comicsId  String
  upVote    Int      @default(0)
  downVote  Int      @default(0)

  @@index([authorId])
  @@index([comicsId])
}

model ChapterComment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId  String
  chapter   Chapter  @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  chapterId String
  upVote    Int      @default(0)
  downVote  Int      @default(0)

  @@index([authorId])
  @@index([chapterId])
}

model Ratings {
  id       Int    @id @default(autoincrement())
  rating   Int
  comics   Comics @relation(fields: [comicsId], references: [id])
  comicsId String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId   String

  @@index([comicsId])
  @@index([userId])
}

model ChapterLike {
  id        Int     @id @default(autoincrement())
  chapter   Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  chapterId String
  author    User    @relation(fields: [authorId], references: [id])
  authorId  String

  @@index([chapterId])
  @@index([authorId])
}
